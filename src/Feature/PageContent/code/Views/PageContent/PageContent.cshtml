@using Sitecore.Mvc
@using Pintle.Feature.PageContent.SitecoreTemplates
@model Xwrap.Mvc.IViewModel<_PageContentItem, PageContentParameters>
@if (!Model.RenderingParameters.HidePageTitle.Value)
{
	<div class="banner">
		<div class="container">
			<div class="main">
				@Model.RenderingItem.PageTitle.Render(new {EnclosingTag = "h2"})
			</div>
		</div>
	</div>
}

<div class="about-section">
	<div class="container">
		<div class="col-md-8">
			@Model.RenderingItem.PageBody
		</div>
		<div class="col-md-4 ">
			@Model.RenderingItem.PageImage.Render(new {@class = "img-responsive" , w = "350"})
			@Html.Sitecore().Placeholder("side-content")
		</div>
		<div class="clearfix"> </div>
	</div>
</div>